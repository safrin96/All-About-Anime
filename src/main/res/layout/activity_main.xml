            <CheckBox
                android:id="@+id/q6a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q6a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q7" />

