<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="16dp"
        android:background="#e0f2f1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="match_parent"
                android:src="@drawable/anime"/>
            <TextView
                style="@style/HeaderTextStyle"
                android:text="@string/welcome"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="textMultiLine" />

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q1a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q1a1" />

            <CheckBox
                android:id="@+id/q1a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q1a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q2a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q2a1" />

            <CheckBox
                android:id="@+id/q2a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q2a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q3a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q3a1" />

            <CheckBox
                android:id="@+id/q3a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q3a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q4a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q4a1"
                android:contextClickable="true"/>

            <CheckBox
                android:id="@+id/q4a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q4a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q5" />

        <LinearLayout
            android:layout_width="match_parent"
