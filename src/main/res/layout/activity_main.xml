                android:id="@+id/q7a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q7a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q8a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q8a1" />

            <CheckBox
                android:id="@+id/q8a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q8a2" />
        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/q9a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q9a1" />

            <CheckBox
                android:id="@+id/q9a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q9a2" />

        </LinearLayout>

        <TextView
            style="@style/QuesTextStyle"
            android:text="@string/q10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/q10a1"
                style="@style/AnsTextStyle"
                android:layout_gravity="start"
                android:text="@string/q10a1" />

            <RadioButton
                android:id="@+id/q10a2"
                style="@style/AnsTextStyle"
                android:layout_gravity="end"
                android:text="@string/q10a2" />

        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout-->

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00695c"
            android:textColor="#e0f7fa"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:onClick="submitQuiz"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/point_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AnsTextStyle"/>

    </LinearLayout>
</ScrollView>